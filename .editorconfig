# This file is for unifying the coding style for different editors and IDEs.
# More information at http://EditorConfig.org
root = true

[*]
indent_style = tab
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true

[*.hx]
end_of_line = lf
charset = utf-8

[*.md]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2